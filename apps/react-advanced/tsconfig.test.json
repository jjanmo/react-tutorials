{
  "compilerOptions": {
    "module": "commonjs", // Jest는 CommonJS 모듈을 사용
    "jsx": "react-jsx", // React 컴포넌트 테스트를 위한 JSX 지원
    "target": "ES2020",
    "lib": ["ES2020", "DOM"], // 브라우저 환경을 모방
    "isolatedModules": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.spec.ts", "src/**/*.spec.tsx"], // 테스트 파일 포함
  "exclude": ["node_modules", "dist"]
}
